extends ../../layouts/default.pug 
block main
 h1 Danh sách sản phẩm
 table.table.table-hover.table-sm.caption-top
  
  thead
    tr
      th(scope='col') STT
      th(scope='col') Hình ảnh
      th(scope='col') Tiêu đề
      th(scope='col') Giá
      th(scope='col') Trạng thái
      th(scope='col') Hành Động
  tbody
   each item,index in product
    tr
      
      td #{index +1} 
      td
       img(
        src=item.thumbnail
        alt="Sản phẩm 1"
        width="100px"
        height="auto"
       )
      td #{item.title}
      td #{item.price}$
      td 
       if(item.brand=="Apple")
        a( class="badge badge-success" ) Hoạt động 
       else 
        a(class="badge badge-unstart" ) Dừng hoạt động  
        
      td
       button(class="btn btn-warning btn-sm") Sửa
       button(class="btn btn-danger btn-sm m1-1") Xóa


   
