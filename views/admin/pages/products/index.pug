extends ../../layouts/default.pug 
block main
 h1 Danh sách sản phẩm
 .car.mb3 
  .car-header Bộ lọc và tìm kiếm
  .car-body
    button(
        class="btn btn-sm m1-1 btn-outline-succes active" 
        button-status=""
    ) Tất cả
    button(
        class="btn btn-sm m1-1 btn-outline-succes active"
        button-status="active"
    ) Hoạt động
    button(
        class="btn btn-sm m1-1 btn-outline-succes active"  
        button-status="inactive"
    ) Dừng hoạt động
 
 table.table.table-hover.table-sm.caption-top
  thead
    tr
      th(scope='col') STT
      th(scope='col') Hình ảnh
      th(scope='col') Tiêu đề
      th(scope='col') Giá
      th(scope='col') Trạng thái
      th(scope='col') Hành Động
  tbody
   each item,index in product
    tr
      td #{index +1} 
      td
       img(
        src=item.thumbnail
        alt="Sản phẩm 1"
        width="100px"
        height="auto"
       )
      td #{item.title}
      td #{item.price}$
      td 
       if (item.status=="active")
        a(a="#" class="badge badge-success" )  Hoạt động 
       else 
        a(a="#" class="badge badge-unsuccess" ) Không Hoạt động
      td
       button(class="btn btn-warning btn-sm") Sửa
       button(class="btn btn-danger btn-sm m1-1") Xóa


   
